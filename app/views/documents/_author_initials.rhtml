
<table width="100%">
  <tr>
    <td id="initials">
      <% for initial in Author.initials %>
        <%= link_to_unless_current initial, :action => "authors", :initial => initial %>
      <% end %>
    </td>
    <td>
      <%= start_form_tag({:action => 'find'}, {:method => 'get'}) %>
      Cerca: 
      <%= text_field_tag 'q', ''  %> 
      <%= end_form_tag %>
    </td>
  </tr>
</table>


