
<h2>News dall&#8217;Accademia</h2>

<% for news in @news %>
  <div class='news'>
    <p>
      <%= link_to news.title, :action => 'show', :id => news %> 
      <span class='news-date'><%= news.created_at.to_s(:short) %></span>
    </p>
  </div>
<% end %>

<%= pagination_links(@news_pages) %>

<div class='buttons'>
<%= admin_link_to 'Inserisci notizia', :action => 'new' %>
</div>
